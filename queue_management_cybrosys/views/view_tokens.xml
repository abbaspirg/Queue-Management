<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="view_tokens" name="View Tokens">

            <div style="width: 100%; height: 100%; background-color: #c7cdc7;">
                <br/>
                <div style="background-color: white;
                            width: 500px;
                            height: 500px;
                            border-radius: 15px;
                            margin-left: 37%;
                            margin-top: 8%;">
                    <br/>
                    <div id="generator" align="center"
                         style="color:green;font-size:xx-large;">
                        <p>Your token generated successfully</p>
                    </div>
                    <br/>
                    <div id="print_area">
                    <div align="center">
                        <p style="font-family: Arial-BoldMt;font-size:23px;color:black;">
                            <b>TOKEN NO :</b>
                        </p>
                    </div>
                    <div align="center"
                         style="font-family: Arial-BoldMt;font-size:xxx-large;color:blue;">
                        <span><t t-esc="token"/></span>
                    </div>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div>
                        <div style="float:left;margin-left: 20px;">
                            <label style="font-size: 20px;">
                                <b>Attending:</b>
                                <span>
                                    <t t-esc="attending"/>
                                </span>
                            </label>
                        </div>
                        <div style="float:right;margin-right: 20px;">
                            <label style="font-size: 20px;">
                                <b>Your position:</b>
                                <span>
                                    <t t-esc="position"/>
                                </span>
                            </label>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div>
                        <div style="float:left;margin-left: 25px;">
                            <a t-att-href="url">
                            <button style="padding: 11px;
                                            background-color: white;
                                            color: black;
                                            font-size: medium;
                                            border-radius: 10px;">Close</button>
                            </a>
                        </div>
                        <div style="float:right;margin-right: 25px;">

                            <button style="padding: 11px;
                                            background-color: black;
                                            color: white;
                                            font-size: medium;
                                            border-radius: 10px;"
                                            id="print_token">Print Token</button>

                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript" src="/queue_management_cybrosys/static/src/js/queue_tokens.js"/>
        </template>
    </data>
</odoo>